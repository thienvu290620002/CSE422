@model Lab2_VoThienVu_CSE422.Models.DeviceCategory

@{
    ViewData["Title"] = "Create Device Category";
}

<h1>Create Device Category</h1>

<!-- Hiển thị lỗi nếu có lỗi nhập dữ liệu -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form method="post">
    <div class="form-group">
        <label for="Name">Category Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="@Url.Action("Index", "DeviceCategory")" class="btn btn-secondary">Back to List</a>
